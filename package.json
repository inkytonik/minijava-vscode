{
    "name": "minijava",
    "displayName": "minijava",
    "description": "MiniJava Language",
    "version": "0.0.1",
    "publisher": "inkytonik",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:minijava"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "minijava",
                "extensions": [
                    ".mj"
                ],
                "aliases": [
                    "MiniJava",
                    "minijava"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "minijava",
                "scopeName": "source.minijava",
                "path": "./syntaxes/minijava.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.1"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
